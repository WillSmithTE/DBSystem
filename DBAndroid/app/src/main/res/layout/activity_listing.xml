<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listingScrollView"
    style="@style/baseView.spaced"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".common.ListingActivity">

    <LinearLayout
        android:id="@+id/listingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listingTitle"
            style="@style/title.medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <View style="@style/divider" />

        <TextView
            android:id="@+id/listingOwner"
            style="@style/subTitle.small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By HappyCharity" />

        <TextView
            android:id="@+id/listingExpiry"
            style="@style/subTitle.small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expires at DATE" />

        <TextView
            android:id="@+id/listingIndustry"
            style="@style/subTitle.small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Under Science" />

        <TextView
            android:id="@+id/listingCreatedAt"
            style="@style/subTitle.small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created at DATE" />

        <TextView
            android:id="@+id/listingLocation"
            style="@style/subTitle.small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At Someplace" />

        <TextView
            android:id="@+id/listingContactNumber"
            style="@style/subTitle.small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number : 04538923489" />

        <LinearLayout
            android:id="@+id/listingEventDateBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/simple_box"
            android:orientation="vertical"
            android:padding="30dp"
            android:paddingStart="80dp"
            android:paddingEnd="80dp">

            <TextView
                android:id="@+id/listingStartDate"
                style="@style/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="START DATE" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <TextView
                android:id="@+id/listingEndDate"
                style="@style/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="END DATE" />

        </LinearLayout>

        <FrameLayout
            style="@style/boxedBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/listingDescription"
                style="@style/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never the end is never" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/listingFragContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>
    </LinearLayout>

</ScrollView>