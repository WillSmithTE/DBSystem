<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="authBackground" parent="AppTheme">
        <item name="android:background">@color/colorAuthBackground</item>
    </style>

    <style name="baseBackground" parent="AppTheme">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="title" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:fontFamily">@font/droid_sans_bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="subTitle" parent="AppTheme">
        <item name="android:textColor">@color/colorSubTitle</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body" parent="AppTheme">
        <item name="android:textColor">@color/colorThinBlack</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cardStyle" parent="AppTheme">
        <item name="android:background">@color/colorAlmostWhite</item>
    </style>

    <style name="cardStyle.view">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="cardStyle.layout">
        <item name="android:padding">20dp</item>
    </style>

    <style name="cardStyle.title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorCardTitle</item>
        <item name="android:fontFamily">@font/secular_one</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="cardStyle.subTitle">
        <item name="android:textColor">@color/colorThinBlack</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="cardStyle.subTitle.right">
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="cardStyle.body">
        <item name="android:textColor">@color/colorThinBlack</item>
        <item name="android:fontFamily">@font/droid_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="searchBarStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">8</item>
        <item name="android:queryHint">Search...</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/search_rectangle</item>
    </style>

</resources>
